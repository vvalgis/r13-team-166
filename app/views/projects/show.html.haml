%h1
  = @project.name
  %small
    Base language:
    = @project.lang
%p= @project.description

%p= link_to 'Add document to project', new_project_document_path(@project)

%ul
  - @project.documents.each do |doc|
    %li
      = doc.comment
      = link_to 'Show', project_document_path(@project, doc)
      = link_to 'Edit', edit_project_document_path(@project, doc)

